{
	"name": "trejjam/latte",
	"description": "Latte template engine extensions and utilities",
	"keywords": [
		"latte",
		"template",
		"nette"
	],
	"license": "MIT",
	"authors": [
		{
			"name": "Jan Trejbal"
		}
	],
	"support": {
		"issues": "https://github.com/trejjam/latte/issues"
	},
	"require": {
		"php": "^8.2 | ^8.3 | ^8.4",

		"latte/latte": "^3.0.20",
		"nette/utils": "^4.0"
	},
	"require-dev": {
		"phpstan/phpstan": "^2.0",
		"phpstan/extension-installer": "^1.2",
		"phpstan/phpstan-deprecation-rules": "^2.0",
		"phpstan/phpstan-strict-rules": "^2.0",

		"symplify/easy-coding-standard": "^12.0 || ^13.0",

		"roave/security-advisories": "dev-master"
	},
	"suggest": {

	},
	"autoload": {
		"psr-4": {
			"Trejjam\\Latte\\": "src/"
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"config": {
		"sort-packages": true,
		"allow-plugins": {
			"phpstan/extension-installer": true
		}
	},
	"extra": {
		"branch-alias": {
			"dev-master": "v0.1.x-dev"
		}
	}
}
